-- create
CREATE TABLE EMPLOYEE (
  empId INTEGER PRIMARY KEY,
  name TEXT NOT NULL,
  dept TEXT NOT NULL,
  salary INTEGER
);

-- insert
INSERT INTO EMPLOYEE VALUES (1, 'Clark', 'Sales', 9999);
INSERT INTO EMPLOYEE VALUES (2, 'Dave', 'Accou', 8888);
INSERT INTO EMPLOYEE VALUES (3, 'Ava', 'Sales', 7777);

SELECT * FROM EMPLOYEE WHERE dept='sales';
SELECT * FROM EMPLOYEE WHERE dept='Accou';
SELECT * FROM EMPLOYEE WHERE dept='Sales';
-- fetch 
ALTER TABLE EMPLOYEE ADD COLUMN money INTEGER;

UPDATE EMPLOYEE SET money=555 WHERE empid=1;
UPDATE EMPLOYEE SET money=556 WHERE empid=2;
UPDATE EMPLOYEE SET money=557 WHERE empid=3;

CREATE INDEX IF NOT EXISTS dsad ON EMPLOYEE(name);
SELECT 'dsad' FROM EMPLOYEE;

SELECT * FROM EMPLOYEE;


